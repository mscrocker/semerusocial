<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

	<changeSet author="Bernardo" id="initial_tables">
		<createTable tableName="UserTable">
			<column autoIncrement="true" name="id" type="BIGINT">
				<constraints primaryKey="true" />
			</column>
			<column name="userName" type="VARCHAR(30)">
				<constraints nullable="false" unique="true" />
			</column>
			<column name="password" type="VARCHAR(60)">
				<constraints nullable="false" unique="true" />
			</column>
			<column name="date" type="DATETIME">
				<constraints nullable="false" unique="false" />
			</column>
			<column name="sex" type="VARCHAR(30)">
				<constraints nullable="false" unique="false" />
			</column>
			<column name="city" type="VARCHAR(30)">
				<constraints nullable="false" unique="false" />
			</column>
		</createTable>

		<createTable tableName="ImageTable">
			<column autoIncrement="true" name="imageId" type="BIGINT">
				<constraints primaryKey="true" />
			</column>
			<column name="user" type="BIGINT">
				<constraints nullable="false" unique="false" />
			</column>
			<column name="data" type="MEDIUMBLOB">
				<constraints nullable="false" />
			</column>
			<column name="description" type="VARCHAR(30)">
				<constraints nullable="false" unique="false" />
			</column>
			<column name="type" type="VARCHAR(20)">
				<constraints nullable="false" unique="false" />
			</column>
		</createTable>
	</changeSet>

	<changeSet author="liquibase-docs"
		id="addForeignKeyConstraint">
		<addForeignKeyConstraint
			baseColumnNames="user"
			 baseTableName="ImageTable"
			constraintName="fk_userId"
			referencedColumnNames="id" 
			referencedTableName="UserTable" />
	</changeSet>

    <changeSet author="liquibase-docs" id="addSuggestionColumn">
        <addColumn tableName="UserTable">
            <column name="suggestion" type="BIGINT">
                <constraints nullable="true" unique="false" />
            </column>
        </addColumn>
        <addForeignKeyConstraint
            baseColumnNames="suggestion"
            baseTableName="UserTable"
            constraintName="fk_suggestionId"
            onDelete="SET NULL"
            referencedColumnNames="id" 
            referencedTableName="UserTable" />
    </changeSet>
    
    <changeSet id="table CitiesCriteria" author="">
        <sqlFile encoding="utf8" path="scripts/createCitiesCriteria.sql"
            relativeToChangelogFile="true" stripComments="true" />
    </changeSet>
    
    <changeSet id="criteria_UserTable" author="liquibase-docs">
        <addColumn tableName="UserTable">
            <column name="criteriaSex" type="ENUM('FEMALE','MALE','OTHER','ANY')">
                <constraints nullable="false" unique="false" />
            </column>
            <column name="criteriaMinAge" type="INT">
                <constraints nullable="false" unique="false" />                
            </column>
            <column name="criteriaMaxAge" type="INT">
                <constraints nullable="false" unique="false" />                
            </column>
        </addColumn>
        
        <addDefaultValue 
            columnName="criteriaSex" 
            tableName="UserTable"
            defaultValue="Any"/>
            
        <addDefaultValue 
            tableName="UserTable"
            columnName="criteriaMinAge"
            defaultValueNumeric="0"/>
        
        <addDefaultValue 
            tableName="UserTable"
            columnName="criteriaMaxAge"
            defaultValueNumeric="99"/>
        
    </changeSet>
    
    

</databaseChangeLog>
